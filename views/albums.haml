- if @albums
  %table
    %thead
      %tr
        %th= i18n.album.name
        %th= i18n.album.creation_date
        %th
    %tbody
      - for album in @albums
        %tr{:class => ('active' if album == @current_album)}
          %td
            %a(href="album/#{album.id}" rel="nofollow")
              = album.name
          %td
            = i18n.l album.created_at
          %td.actions
            %a.delete.icon(href="/albums/#{album.id}/delete" rel="nofollow")
              = i18n.album.delete
- else
  %i= i18n.album.none
